apiVersion: v1
kind: Service
metadata:
  name: ${component.git-service.service}
  namespace: ${component.git-service.namespace}
  labels:
    provider: agilestacks.com
    project: git-service
    kubernetes.io/name: Git-Service
    kubernetes.io/cluster-service: "true"
spec:
  ports:
  - name: http
    port: 80
    targetPort: 8005
    protocol: TCP
  - name: ssh
    port: 22
    targetPort: 2022
    protocol: TCP
  selector:
    provider: agilestacks.com
    project: git-service
    qualifier: gits
