apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: git
  namespace: ${component.git-service.namespace}
  labels:
    provider: agilestacks.com
    project: git-service
spec:
  rules:
  - host: ${component.git-service.name}.${component.ingress.fqdn}
    http:
      paths:
      - path: /
        backend:
          serviceName: ${component.git-service.service}
          servicePort: 80
